{% comment %}
  Parallax + Content Section
  This section creates a parallax effect where the first section serves as a fixed background
  while other sections scroll on top with parallax effects
{% endcomment %}

<div class="parallax-slideshow-container" id="parallax-{{ section.id }}">
  {% if section.blocks.size > 0 %}
    <!-- Fixed Background Layer -->
    <div class="parallax-slideshow-background" 
         data-parallax="background" 
         data-parallax-speed="{{ section.settings.background_speed | divided_by: 10.0 }}">
      
      {% if section.settings.background_overlay %}
        <div class="parallax-background-overlay"></div>
      {% endif %}
    </div>

    <!-- Content Layer -->
    <div class="parallax-content-wrapper" data-parallax="foreground">
      <!-- Spacer to create initial offset -->
      <div class="parallax-spacer"></div>
      
      <!-- All blocks render here, but we'll position the first one as background via CSS -->
      <div class="parallax-blocks-container">
        {% content_for 'blocks' %}
      </div>
    </div>
  {% else %}
    <!-- No sections found -->
    <div class="parallax-error">
      <p>Please add sections to create the parallax effect. The first section will be the fixed background, and additional sections will scroll on top.</p>
    </div>
  {% endif %}
</div>

<!-- Load parallax CSS and JS -->
{{ 'parallax-slideshow.css' | asset_url | stylesheet_tag }}
<script src="{{ 'parallax-slideshow.js' | asset_url }}" defer></script>

<style>
  /* Container setup */
  #parallax-{{ section.id }} {
    position: relative;
    overflow: hidden;
  }
  
  /* Fixed background layer */
  #parallax-{{ section.id }} .parallax-slideshow-background {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: {{ section.settings.slideshow_height }}vh;
    z-index: -1;
  }
  
  /* Background overlay */
  #parallax-{{ section.id }} .parallax-background-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, {{ section.settings.overlay_opacity | divided_by: 100.0 }});
    z-index: 1;
  }
  
  /* Content wrapper */
  #parallax-{{ section.id }} .parallax-content-wrapper {
    position: relative;
    z-index: 2;
  }
  
  /* Initial spacer */
  #parallax-{{ section.id }} .parallax-spacer {
    height: {{ section.settings.slideshow_height }}vh;
  }
  
  /* Position first block as background */
  #parallax-{{ section.id }} .parallax-blocks-container > *:first-child {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: {{ section.settings.slideshow_height }}vh;
    z-index: -2;
  }
  
  /* Ensure first block content fills the space */
  #parallax-{{ section.id }} .parallax-blocks-container > *:first-child .section {
    height: 100%;
    min-height: 100%;
    padding: 0;
    margin: 0;
  }
  
  /* Slideshow specific styles for background */
  #parallax-{{ section.id }} .parallax-blocks-container > *:first-child slideshow-component,
  #parallax-{{ section.id }} .parallax-blocks-container > *:first-child .slideshow {
    height: 100%;
    min-height: 100%;
  }
  
  /* Content blocks styling */
  #parallax-{{ section.id }} .parallax-blocks-container > *:not(:first-child) {
    position: relative;
    z-index: 3;
    background: var(--color-background);
  }
  
  /* Remove default margins from content sections */
  #parallax-{{ section.id }} .parallax-blocks-container > *:not(:first-child) .section {
    margin-top: 0;
    margin-bottom: 0;
  }
  
  /* Parallax intensity control */
  {% if section.settings.parallax_intensity == 'subtle' %}
    #parallax-{{ section.id }} [data-parallax] {
      --parallax-multiplier: 0.3;
    }
  {% elsif section.settings.parallax_intensity == 'strong' %}
    #parallax-{{ section.id }} [data-parallax] {
      --parallax-multiplier: 1.8;
    }
  {% else %}
    #parallax-{{ section.id }} [data-parallax] {
      --parallax-multiplier: 1.0;
    }
  {% endif %}
  
  /* Mobile optimizations */
  @media (max-width: 749px) {
    #parallax-{{ section.id }} .parallax-slideshow-background {
      height: {{ section.settings.slideshow_height | times: 0.75 }}vh;
    }
    
    #parallax-{{ section.id }} .parallax-spacer {
      height: {{ section.settings.slideshow_height | times: 0.75 }}vh;
    }
    
    #parallax-{{ section.id }} .parallax-blocks-container > *:first-child {
      height: {{ section.settings.slideshow_height | times: 0.75 }}vh;
    }
    
    #parallax-{{ section.id }} [data-parallax] {
      --parallax-multiplier: calc(var(--parallax-multiplier) * 0.5);
    }
  }
</style>

{% schema %}
{
  "name": "Parallax + Content",
  "class": "parallax-slideshow-section",
  "max_blocks": 10,
  "settings": [
    {
      "type": "header",
      "content": "Parallax Settings"
    },
    {
      "type": "select",
      "id": "parallax_intensity",
      "label": "Parallax intensity",
      "options": [
        {
          "value": "subtle",
          "label": "Subtle"
        },
        {
          "value": "moderate",
          "label": "Moderate"
        },
        {
          "value": "strong",
          "label": "Strong"
        }
      ],
      "default": "moderate",
      "info": "Controls how much elements move during scroll"
    },
    {
      "type": "range",
      "id": "background_speed",
      "label": "Background scroll speed",
      "min": 1,
      "max": 10,
      "step": 1,
      "default": 5,
      "info": "Lower values make background move slower"
    },
    {
      "type": "header",
      "content": "Background Section"
    },
    {
      "type": "select",
      "id": "slideshow_height",
      "label": "Background section height",
      "options": [
        {
          "value": "50",
          "label": "Small (50vh)"
        },
        {
          "value": "75",
          "label": "Medium (75vh)"
        },
        {
          "value": "100",
          "label": "Full screen (100vh)"
        }
      ],
      "default": "100",
      "info": "Height of the fixed background section"
    },
    {
      "type": "checkbox",
      "id": "background_overlay",
      "label": "Add background overlay",
      "default": true,
      "info": "Adds a dark overlay to improve text readability"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "label": "Overlay opacity",
      "min": 0,
      "max": 80,
      "step": 5,
      "default": 30,
      "unit": "%",
      "visible_if": "{{ section.settings.background_overlay }}"
    }
  ],
  "blocks": [
    {
      "type": "@theme"
    },
    {
      "type": "@app"
    }
  ],
  "presets": [
    {
      "name": "Parallax + Products",
      "category": "Storytelling",
      "settings": {
        "parallax_intensity": "moderate",
        "slideshow_height": "100",
        "background_overlay": true,
        "overlay_opacity": 30
      }
    }
  ]
}
{% endschema %} 