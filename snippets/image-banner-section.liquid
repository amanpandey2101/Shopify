{% comment %}
  Image Banner Section Snippet for Parallax Wrapper
  Renders an image banner with overlay text and optional link
{% endcomment %}

<div class="image-banner color-{{ block.settings.color_scheme | default: 'scheme-1' }}">
  <div class="image-banner__container">
    {% if block.settings.image %}
      <div class="image-banner__image">
        {{ block.settings.image | image_url: width: 1920 | image_tag: 
           loading: 'lazy', 
           alt: block.settings.image.alt | escape,
           class: 'image-banner__img' }}
      </div>
    {% else %}
      <div class="image-banner__placeholder">
        <svg width="200" height="100" viewBox="0 0 200 100" fill="none">
          <rect width="200" height="100" fill="#f3f3f3"/>
          <path d="M60 35h80v30H60z" fill="#e0e0e0"/>
          <circle cx="80" cy="60" r="12" fill="#d0d0d0"/>
          <circle cx="120" cy="60" r="12" fill="#d0d0d0"/>
        </svg>
      </div>
    {% endif %}

    <div class="image-banner__overlay">
      <div class="image-banner__content">
        {% if block.settings.title != blank %}
          <h2 class="image-banner__title">{{ block.settings.title }}</h2>
        {% endif %}
        
        {% if block.settings.subtitle != blank %}
          <p class="image-banner__subtitle">{{ block.settings.subtitle }}</p>
        {% endif %}
        
        {% if block.settings.link != blank %}
          <a href="{{ block.settings.link }}" class="image-banner__button">
            Learn More
          </a>
        {% endif %}
      </div>
    </div>
  </div>
</div>

<style>
  .image-banner {
    position: relative;
    width: 100%;
    min-height: 400px;
    overflow: hidden;
  }

  .image-banner__container {
    position: relative;
    width: 100%;
    height: 100%;
    min-height: 400px;
  }

  .image-banner__image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .image-banner__img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center center;
    transition: transform 0.5s ease;
  }

  .image-banner:hover .image-banner__img {
    transform: scale(1.05);
  }

  .image-banner__placeholder {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #f8f8f8;
    z-index: 1;
  }

  .image-banner__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      135deg,
      rgba(0, 0, 0, 0.4) 0%,
      rgba(0, 0, 0, 0.2) 50%,
      rgba(0, 0, 0, 0.6) 100%
    );
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 2;
    transition: background 0.3s ease;
  }

  .image-banner:hover .image-banner__overlay {
    background: linear-gradient(
      135deg,
      rgba(0, 0, 0, 0.5) 0%,
      rgba(0, 0, 0, 0.3) 50%,
      rgba(0, 0, 0, 0.7) 100%
    );
  }

  .image-banner__content {
    text-align: center;
    color: white;
    max-width: 600px;
    padding: 40px 20px;
    transform: translateY(0);
    transition: transform 0.3s ease;
  }

  .image-banner:hover .image-banner__content {
    transform: translateY(-10px);
  }

  .image-banner__title {
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: 20px;
    line-height: 1.2;
    text-shadow: 0 2px 8px rgba(0, 0, 0, 0.5);
  }

  .image-banner__subtitle {
    font-size: 1.3rem;
    font-weight: 400;
    margin-bottom: 30px;
    line-height: 1.4;
    opacity: 0.95;
    text-shadow: 0 1px 4px rgba(0, 0, 0, 0.5);
  }

  .image-banner__button {
    display: inline-block;
    padding: 15px 30px;
    background: rgba(255, 255, 255, 0.9);
    color: #333;
    text-decoration: none;
    font-weight: 600;
    font-size: 1.1rem;
    border-radius: 6px;
    transition: all 0.3s ease;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
  }

  .image-banner__button:hover {
    background: white;
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.3);
  }

  /* Responsive styles */
  @media screen and (max-width: 990px) {
    .image-banner {
      min-height: 350px;
    }

    .image-banner__container {
      min-height: 350px;
    }

    .image-banner__title {
      font-size: 2.5rem;
    }

    .image-banner__subtitle {
      font-size: 1.2rem;
    }
  }

  @media screen and (max-width: 749px) {
    .image-banner {
      min-height: 300px;
    }

    .image-banner__container {
      min-height: 300px;
    }

    .image-banner__content {
      padding: 30px 15px;
    }

    .image-banner__title {
      font-size: 2rem;
      margin-bottom: 15px;
    }

    .image-banner__subtitle {
      font-size: 1.1rem;
      margin-bottom: 25px;
    }

    .image-banner__button {
      padding: 12px 25px;
      font-size: 1rem;
    }
  }

  @media screen and (max-width: 480px) {
    .image-banner {
      min-height: 250px;
    }

    .image-banner__container {
      min-height: 250px;
    }

    .image-banner__title {
      font-size: 1.7rem;
    }

    .image-banner__subtitle {
      font-size: 1rem;
    }

    .image-banner__button {
      padding: 10px 20px;
      font-size: 0.9rem;
    }
  }
</style> 